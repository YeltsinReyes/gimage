{
    "editor.formatOnSave": true,
    "editor.insertSpaces": true,
    "editor.renderIndentGuides": true,
    "editor.tabSize": 4,
    "editor.rulers": [
        132
    ],
    "files.trimTrailingWhitespace": true,
    "files.insertFinalNewline": true,
    "files.exclude": {
        "**/.git": true,
        "**/.DS_Store": true,
        "node_modules": true,
        "coverage": true,
        "vendor": true,
        "npm": true
    },
    "php.validate.enable": true,
    "phpcs.enable": true,
    "phpcs.standard": "PSR2",
    "phpcbf.enable": true,
    "phpcbf.standard": "PSR2",
    "phpcbf.onsave": true
}
